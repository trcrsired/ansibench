# DEFAULT BENCHMARK CONFIGURATION:
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
cc       = gcc
CLANG      = clang ${TOOLCHAIN_wasm64} -fsanitize=memtag -lwasi-emulated-process-clocks -D_WASI_EMULATED_PROCESS_CLOCKS
SUFFIX     = -mtg
runtime  = 1.0
dtype    = double

##############################################################################
# DO NOT MODIFY BEYOND THIS POINT                                            #
##############################################################################
-include ../mk/$(cc)/stdflags.mk
-include ../mk/$(cc)/opt/$(opt).mk
-include ../mk/$(cc)/xflags/$(xflags).mk
-include ../mk/$(cc)/hint/stdflags.mk
# ----------------------------------------------------------------------------
BINDIR     = ./bin
OUT        = $(BINDIR)/hint
INPUT      = ./src/hint.c ./src/hkernel.c
# ----------------------------------------------------------------------------
CARGS = $(OPTLEVEL) $(CFLAGS) $(XCFLAGS) $(INPUT) 
# ----------------------------------------------------------------------------
DATADIR = ./data
# ----------------------------------------------------------------------------
all: char short int float double ldouble 
run: $(dtype)
	@$(OUT)-$(dtype) 
dirs:
	@mkdir -p $(BINDIR)
	@mkdir -p $(DATADIR)
char: dirs $(INPUT) 
	$(CLANG) -DCHAR -DIINT $(CARGS) -o$(OUT)-char${SUFFIX}.wasm
short: dirs $(INPUT) 
	$(CLANG) -DSHORT -DIINT $(CARGS) -o$(OUT)-short${SUFFIX}.wasm
int: dirs $(INPUT) 
	$(CLANG) -DINT -DIINT $(CARGS) -o$(OUT)-int${SUFFIX}.wasm
float: dirs $(INPUT) 
	$(CLANG) -DFLOAT -DIINT $(CARGS) -o$(OUT)-float${SUFFIX}.wasm
double: dirs $(INPUT) 
	$(CLANG) -DDOUBLE -DILONG $(CARGS) -o$(OUT)-double${SUFFIX}.wasm
ldouble: dirs $(INPUT) 
	$(CLANG) -DLDOUBLE -DILONG $(CARGS) -o$(OUT)-ldouble${SUFFIX}.wasm
clean:
	@-rm -f $(OUT) core a.out *.o
	@-rm -f $(BINDIR)/*
	@-rmdir $(BINDIR)
	@-rm -f $(DATADIR)/*
	@-rmdir $(DATADIR)
